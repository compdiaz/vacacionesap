<mvc:View 
    controllerName="vacacionesap.controller.App"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m">
    <App id="App">
        <pages>
            <Page id="page" title="{i18n>title}">
                <content>
                    <Button id="_IDGenButton1" text="Di Hola" press=".onShowHello"/>
                    <Input id="_IDGenInput1" value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate="true" width="60%"/> 
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
